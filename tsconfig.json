{
    "compilerOptions": {
        "target": "es2016",
        "module": "Node16",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "moduleResolution": "Node16",
        "outDir": "build",
        "typeRoots": ["node_modules/@types", "src/types"]
    },
    "exclude": ["node_modules/"],
    "include": ["src/**/*.ts"]
}
